<h1>Add New Posts</h1>

<form action="/new" method = "POST" role = "form">
  <textarea name = "post[content]" style = "width:400px" class="form-control" rows="4" placeholder = "type text here" value="<%= @p.content %>"></textarea>

  <textarea name = "post[username]" style = "width:400px" class="form-control" rows="1" placeholder = "type name here" value="<%= @p.username %>"></textarea>
  <br/>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>